{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2017",
		"outDir": "lib",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"incremental": true,
		"baseUrl": "src"
	},
	"compileOnSave": true,
	"exclude": ["node_modules"],
	"include": ["src"]
}
